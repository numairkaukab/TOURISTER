<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    android:id="@+id/widget0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f0f0ab22">
    <TextView
        android:id="@+id/widget32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel name"
        android:layout_x="18dp"
        android:layout_y="12dp" />
    <EditText
        android:id="@+id/widget33"
        android:layout_width="286dp"
        android:layout_height="38dp"
        android:hint="Enter hotel name here"
        android:textSize="18sp"
        android:layout_x="17dp"
        android:layout_y="34dp" />
    <TextView
        android:id="@+id/widget34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price ($)"
        android:layout_x="19dp"
        android:layout_y="77dp" />
    <EditText
        android:id="@+id/widget35"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:hint="total"
        android:textSize="18sp"
        android:layout_x="18dp"
        android:layout_y="101dp" />
    <EditText
        android:id="@+id/widget36"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:hint="Room per night"
        android:textSize="18sp"
        android:layout_x="116dp"
        android:layout_y="100dp" />
    <TextView
        android:id="@+id/widget37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ratings"
        android:layout_x="24dp"
        android:layout_y="156dp" />
    <RatingBar
        android:id="@+id/widget38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="55dp"
        android:layout_y="179dp" />
    <TextView
        android:id="@+id/widget39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        android:layout_x="24dp"
        android:layout_y="236dp" />
    <Spinner
        android:id="@+id/widget40"
        android:layout_width="102dp"
        android:layout_height="45dp"
        android:layout_x="22dp"
        android:layout_y="249dp" />
    <EditText
        android:id="@+id/widget41"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:hint="Room occupancy"
        android:textSize="18sp"
        android:layout_x="143dp"
        android:layout_y="252dp" />
    <TextView
        android:id="@+id/widget43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Features"
        android:layout_x="27dp"
        android:layout_y="310dp" />
    <CheckBox
        android:id="@+id/widget44"
        android:layout_width="112dp"
        android:layout_height="32dp"
        android:text="Wifi"
        android:layout_x="29dp"
        android:layout_y="328dp" />
    <CheckBox
        android:id="@+id/widget45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pool"
        android:layout_x="29dp"
        android:layout_y="365dp" />
    <CheckBox
        android:id="@+id/widget46"
        android:layout_width="61dp"
        android:layout_height="34dp"
        android:text="SPA"
        android:layout_x="29dp"
        android:layout_y="402dp" />
    <Button
        android:id="@+id/b_submit"
        android:layout_width="77dp"
        android:layout_height="55dp"
        android:text="Submit"
        android:layout_x="245dp"
        android:layout_y="394dp"
        android:background="#c57b26" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parking"
        android:id="@+id/checkBox"
        android:layout_x="29dp"
        android:layout_y="436dp" />
</AbsoluteLayout>
